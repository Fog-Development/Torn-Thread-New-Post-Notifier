{
  "manifest_version": 3,
  "name": "Torn Thread Notifier",
  "version": "1.0.1",
  "description": "Monitor Torn forum threads and get notified of new posts",
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "https://www.torn.com/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "torn-thread-notifier@fog-dev.com",
      "strict_min_version": "121.0",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  },
  "background": {
    "scripts": [
      "service-worker.js"
    ],
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon-16.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png",
    "256": "assets/icons/icon-256.png"
  }
}